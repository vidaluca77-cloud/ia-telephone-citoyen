# Configuration N8N
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_ENCRYPTION_KEY=your-encryption-key-here
WEBHOOK_URL=http://localhost:5678/

# Configuration base de données
DB_TYPE=sqlite
# Pour SQLite
DB_SQLITE_DATABASE=/home/node/.n8n/database.sqlite

# Pour PostgreSQL (si utilisé)
POSTGRES_DB=n8n
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=changeme
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Configuration API externes
# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Twilio (pour les appels téléphoniques)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Configuration serveur vocal
VOICE_PROVIDER=openai
VOICE_MODEL=tts-1
VOICE_SPEED=1.0

# Configuration reconnaissance vocale
STT_PROVIDER=openai
STT_MODEL=whisper-1

# Configuration application
APP_ENV=development
APP_PORT=3000
APP_SECRET_KEY=your-secret-key-here

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuration Redis (optionnel)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuration webhooks
WEBHOOK_SECRET=your-webhook-secret

# Configuration services publics
CITIZEN_API_KEY=your-citizen-api-key
CITIZEN_API_URL=https://api.service-public.fr

# Configuration base de connaissances
KNOWLEDGE_BASE_URL=https://your-knowledge-base.com
KNOWLEDGE_BASE_API_KEY=your-kb-api-key
